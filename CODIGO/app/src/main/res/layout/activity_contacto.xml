<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202732"
    tools:context=".Contacto">

    <EditText
        android:id="@+id/textNombre1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorAccent"
        android:editable="true"
        android:hint="@string/Nombre"
        app:layout_constraintBottom_toTopOf="@+id/textNumero1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/textNumero1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorAccent"
        android:editable="true"
        android:hint="@string/Numero"
        app:layout_constraintBottom_toTopOf="@+id/textNombre2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNombre1" />

    <EditText
        android:id="@+id/textNombre2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorAccent"
        android:editable="true"
        android:hint="@string/Nombre"
        app:layout_constraintBottom_toTopOf="@+id/textNumero2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNumero1" />

    <EditText
        android:id="@+id/textNumero2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorAccent"
        android:editable="true"
        android:hint="@string/Numero"
        app:layout_constraintBottom_toTopOf="@+id/guardar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNombre2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Contactos"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textNombre1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/guardar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="92dp"
        android:background="@drawable/boton_mio1"
        android:onClick="guardar"
        android:text="@string/Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNumero2" />
</androidx.constraintlayout.widget.ConstraintLayout>